@model Assessments.ViewModels.SetupViewModels.SetupIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Setup Assessments</h2>

@Html.ActionLink("Create New", "CreateAssessment", null, new { @class = "btn btn-success" })

<div class="row">
    @foreach (var item in Model.Assessments)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>
                        <a href="@Url.Action("EditAssessment", new { id = item.ID })" class="btn btn-primary" role="button">Setup</a>
                    </p>
                </div>
            </div>
        </div>

    }
</div>
